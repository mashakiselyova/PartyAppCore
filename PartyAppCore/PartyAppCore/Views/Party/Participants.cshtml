@model PartyAppCore.ViewModels.PartyViewModel

@{
    ViewBag.Title = "Участники";
}

<table border="1">
    @foreach (var party in @Model.Parties)
    {
        <tr>
            <td align="center" colspan="2">@party.Name:</td>
        </tr>
        foreach (var participant in @party.Participants.Where(p => p.IsAttending == true))
        {
            <tr>
                <td>@participant.Name</td>
                <td>
                    @{
                        if (participant.Avatar != null)
                        {
                            <img src="data:image;base64, @System.Convert.ToBase64String(participant.Avatar)" width="200" />

                        }
                    }
                </td>
            </tr>
        }
    }
</table>
<br />


